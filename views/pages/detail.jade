extend ../layout

block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockware-flash")
			.col-md-5
				dl.horizontal
					dt 电影名字
					dd= movie.title
					dt 导演
					dd= movie.doctor
					dt 国家
					dd= movie.country
					dt 语音
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 电影简介
					dd= movie.summary
