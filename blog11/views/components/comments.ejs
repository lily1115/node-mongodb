<div class="ui grid">
  <div class="four wide column">
    <div class="ui segment">
      <div class="ui minimal comments">
        <h3 class="ui dividing header">留言</h3>

        <% comments.forEach(function (comment) { %>
          <div class="comment">
            <span class="avatar">
              <img src="/img/<%= comment.author.avatar %>" alt="">
            </span>
            <div class="content">
              <a href="/posts/author=<%= comment.author._id %>" class="author">
                <%= comment.author.name %>
              </a>
              <div class="metadata">
                <span class="date"><%= comment.created_at %></span>
              </div>
              <div class="text">
                <%- comment.content %>
              </div>

              <% if (user && comment.author._id && user._id.toString() === comment.author._id.toString()) { %>
                <div class="actions">
                  <a href="/posts/<% post._id %>/comment/<% comment._id %>/remove" class="reply">删除</a>
                </div>
              <% } %>
            </div>
          </div>
        <% }) %>

        <% if (user) { %>
          <form action="/posts/<%= post._id %>/comment" class="ui reply">
            <div class="field">
              <textarea name="content" id="" cols="30" rows="10"></textarea>
            </div>
            <input type="submit" class="ui icon button" name="" value="留言">
          </form>
        <% } %>

      </div>
    </div>
  </div>
</div>